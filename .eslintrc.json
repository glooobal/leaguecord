{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "quotes": ["error", "single"],
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "eqeqeq": "error",
    "no-multiple-empty-lines": ["warn", { "max": 2 }],
    "no-extra-parens": "warn",
    "no-useless-return": "warn",
    "no-shadow": "warn",
    "prefer-const": "warn"
  }
}
